<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zombicidefondo"
    tools:context="edu.eseiaat.upc.pma.manuel.daniel.zombicidesuport.IntercambioActivity">

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nombre1"
        android:layout_toStartOf="@+id/carta23"
        android:onClick="Aceptar"
        android:text="Aceptar" />

    <ImageView
        android:id="@+id/carta11"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/nombre1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <ImageView
        android:id="@+id/carta21"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/nombre2"
        android:layout_alignStart="@+id/nombre2" />

    <ImageView
        android:id="@+id/carta22"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/nombre2"
        android:layout_toEndOf="@+id/carta21" />

    <ImageView
        android:id="@+id/carta13"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/carta11"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/carta25"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@+id/carta22"
        android:layout_toEndOf="@+id/carta24"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle" />

    <ImageView
        android:id="@+id/carta23"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginEnd="43dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/carta21"
        android:layout_toStartOf="@+id/carta22" />

    <ImageView
        android:id="@+id/carta24"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="58dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/carta21"
        android:layout_alignStart="@+id/carta21" />

    <ImageView
        android:id="@+id/carta14"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/carta11"
        android:layout_toEndOf="@+id/carta13" />

    <ImageView
        android:id="@+id/carta15"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/carta12"
        android:layout_toEndOf="@+id/carta14" />

    <ImageView
        android:id="@+id/carta12"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/nombre1"
        android:layout_toEndOf="@+id/carta11" />

    <TextView
        android:id="@+id/nombre1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/tabla"
        android:text="nombre"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/carta15" />

    <TextView
        android:id="@+id/nombre2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/tabla"
        android:text="nombre"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/nombre1"
        android:layout_alignBottom="@+id/nombre1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp" />
</RelativeLayout>
