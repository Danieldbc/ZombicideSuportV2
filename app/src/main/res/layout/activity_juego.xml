<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_juego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eseiaat.upc.pma.manuel.daniel.zombicidesuport.JuegoActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/ViewPersonajes"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ViewPersonajes"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/recyclerView2"
        android:layout_toStartOf="@+id/recyclerView2"
        android:text="+" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/button7"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginTop="90dp"
        android:layout_toLeftOf="@+id/recyclerView2"
        android:layout_toStartOf="@+id/recyclerView2"
        android:text="modozombie"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_below="@+id/switch1"
        android:text="cambio"
        android:textSize="8sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_alignTop="@+id/carta1"
        android:layout_toEndOf="@+id/carta1" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/button7"
        android:layout_toLeftOf="@+id/text_red_3"
        android:layout_toStartOf="@+id/text_red_3"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/imageButton77"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_alignBottom="@+id/text_blue"
        android:layout_toEndOf="@+id/text_blue" />

    <ImageButton
        android:id="@+id/imageButton777"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_below="@+id/progressBar"
        android:layout_toStartOf="@+id/text_blue" />

    <ImageButton
        android:id="@+id/imageButton7777"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_alignBottom="@+id/text_yellow"
        android:layout_toEndOf="@+id/text_organge_2" />




    <ImageView
        android:id="@+id/carta1"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_alignTop="@+id/switch1"
        android:layout_toEndOf="@+id/ViewPersonajes" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        app:srcCompat="@drawable/rifle" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        app:srcCompat="@drawable/rifle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/rifle"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView2" />


    <TextView
        android:id="@+id/text_red_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_alignTop="@+id/imageButton7777"
        android:layout_toEndOf="@+id/imageButton7777" />

    <TextView
        android:id="@+id/text_red_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_red_1"
        android:layout_alignStart="@+id/text_red_1"
        android:layout_below="@+id/text_red_1"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_red_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/button4" />

    <TextView
        android:id="@+id/text_red_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_red_2"
        android:layout_alignStart="@+id/text_red_2"
        android:layout_below="@+id/text_red_2"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_organge_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_above="@+id/text_red_5"
        android:layout_alignLeft="@+id/text_yellow"
        android:layout_alignStart="@+id/text_yellow"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/text_red_3" />

    <TextView
        android:id="@+id/text_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_alignTop="@+id/imageButton77"
        android:layout_toEndOf="@+id/imageButton77" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switch1"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/button4"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toRightOf="@+id/button4"
        android:layout_toStartOf="@+id/button7" />


</RelativeLayout>
