<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zombicidefondo"
    tools:context="edu.eseiaat.upc.pma.manuel.daniel.zombicidesuport.CardsActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/ViewCartas"
        android:layout_width="140dp"
        android:layout_height="290dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Aceptar"
        android:text="Aceptar"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:onClick="Cancelar"
        android:text="Cancelar" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Carta1"
        android:layout_marginStart="209dp"
        android:onClick="Todas"
        android:text="Todas" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_toStartOf="@+id/Carta1"
        android:onClick="Distancia"
        android:text="Distancia" />

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:onClick="Cuerpo"
        android:text="Cuerpo" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:onClick="Especiales"
        android:text="Especiales" />

    <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:onClick="Otros"
        android:text="Otros" />

    <ImageView
        android:id="@+id/Carta1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_marginStart="55dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button3" />

    <ImageView
        android:id="@+id/Carta3"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/Carta1"
        android:layout_toEndOf="@+id/button5"
        android:layout_marginStart="14dp" />

    <ImageView
        android:id="@+id/Carta4"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_alignTop="@+id/Carta3"
        android:layout_toEndOf="@+id/Carta3" />

    <ImageView
        android:id="@+id/Carta5"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_below="@+id/Carta2"
        android:layout_toEndOf="@+id/Carta4" />

    <ImageView
        android:id="@+id/Carta2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rifle"
        android:layout_alignTop="@+id/Carta1"
        android:layout_toEndOf="@+id/Carta1" />
</RelativeLayout>
